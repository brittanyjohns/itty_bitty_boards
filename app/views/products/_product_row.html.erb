<div class="container mx-auto px-4">
  <div class="flex flex-wrap -mx-2">
    <% @products.each do |product| %>
      <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 px-2 mb-4">
        <%= link_to product, class: "block bg-white rounded-lg shadow hover:shadow-lg overflow-hidden" do %>
          <div class="p-4">
            <p class="text-gray-700 text-base mb-4"><%= product.name %></p>
          </div>
          <div class="px-4 pt-3 pb-4 border-t border-gray-200 bg-gray-100">
            <p class="text-gray-600 text-sm">Price: <%= number_to_currency(product.price) %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
