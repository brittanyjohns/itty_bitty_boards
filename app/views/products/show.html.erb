<div class="container mx-auto sm:w-full md:w-3/4 p-4 bg-white">
  <div class="flex flex-wrap">
    <div class="w-full bg-white rounded-lg shadow overflow-hidden">
      <%= image_tag(@product.image.variant(resize_to_fill: [360, 360]), class: "object-cover object-center w-full h-90") if @product.image.attached? %>
      <div class="p-4">
        <h3 class="text-xl font-semibold mb-2"><%= @product.name %></h3>
        <%= form_for @order_item, remote: true do |f| %>
          <p class="text-gray-700 mb-3">Unit Price: <%= number_to_currency @product.price %></p>
          <div class="flex items-stretch mb-3">
            <%= f.number_field :quantity, value: 1, class: "form-input mr-2", min: 1 %>
            <div class="flex items-center">
              <%= f.hidden_field :product_id, value: @product.id %>
              <%= f.submit "Add to Cart", class: "px-4 py-2 border border-transparent text-white bg-blue-500 hover:bg-blue-600 rounded" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="mt-4">
  <%= link_to "Edit this product", edit_product_path(@product), class: "text-blue-500 hover:text-blue-600" if current_user.admin? %>
  <%= link_to "Back to products", products_path, class: "text-blue-500 hover:text-blue-600" %>
  <%= button_to "Destroy this product", @product, method: :delete, class: "text-red-500 hover:text-red-600" if current_user.admin? %>
</div>
