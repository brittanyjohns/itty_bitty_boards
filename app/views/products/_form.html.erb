<%= simple_form_for @product, defaults: { input_html: { class: 'form-control' } } do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.association :product_category, collection: ProductCategory.order(:name), prompt: "Choose a Category" %>
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :description %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
