<%= form_with(model: menu, data: { controller: "image-parser" }, class: "bg-white p-4 rounded-lg shadow-md mx-auto max-w-lg") do |form| %>
  <% if menu.errors.any? %>
    <div class="bg-red-100 text-red-700 p-3 rounded">
      <h2 class="font-bold"><%= pluralize(menu.errors.count, "error") %> prohibited this menu from being saved:</h2>

      <ul class="list-disc list-inside">
        <% menu.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_field :name, class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline w-full" %>
  </div>
  <hr/>

  <%= form.fields_for :docs do |doc_form| %>
    <div class="mb-4">
      <%= doc_form.hidden_field :user_id, value: current_user.id %>
      <%= doc_form.hidden_field :raw_text, data: { image_parser_target: "image_description" }, class: "hidden" %>
    </div>

    <div class="mb-4">
      <p class="text-xl font-semibold">Upload a menu image</p>
      <%= doc_form.file_field :image, data: { image_parser_target: "file", action: "change->image-parser#upload" }, class: "block w-full text-sm text-gray-700 py-2 px-3 rounded leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>

  <div class="mb-4 flex justify-end">
    <%= form.submit "Save", class: "text-white bg-green-500 hover:bg-green-700 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %> 
    <%= link_to "cancel", menus_path, class: "text-red-500 hover:text-red-700 font-medium py-2 px-4 rounded-md" %>
  </div>
<% end %>
