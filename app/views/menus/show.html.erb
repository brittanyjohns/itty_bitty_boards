<div class="relative w-full bg-blue-50 py-6">
  <h1 class="text-4xl font-bold text-blue-600 mb-6 text-center">
    <%= @menu.name %>
  </h1>

  <p class="text-center text-gray-600 mb-6">
    <%= @menu.doc_boards.any? ? "Last updated: " + @menu.docs.last.updated_at.strftime("%d/%m/%Y") : "Please wait while we create your menu board..." %>
  </p>
  <div class="mx-auto p-4 border rounded-lg shadow-lg bg-white max-w-4xl">
    <div class="space-y-6">
      <% @menu.docs.each do |doc| %>
        <div class="bg-gray-100 p-4 rounded-lg shadow-md">
          
          <%= link_to doc.board do %>
            <div id="<%= dom_id doc %>" class="relative">
              <%= image_tag doc.image, class: "w-full rounded-lg" if doc.image.attached? %>
              <%= mark_as_current_button(doc) if doc.image.attached? %>
              <%= remove_doc_button(doc) if doc.user == current_user || current_user.admin? %>
            </div>
          <% end %>
          <p class="text-lg font-bold text-blue-600 mb-3 text-center">
            <%= link_to doc.image.filename, doc %> <span class="text-sm text-gray-500">(<%= doc.created_at.strftime("%d/%m/%Y") %>)</span>
          </p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-8 flex justify-center space-x-4">
    <%= button_to "Edit this menu", edit_menu_path(@menu), method: :get, class: "text-blue-500 hover:text-blue-700 font-medium py-2 px-4 rounded-md" %>
    <%= button_to "Back to menus", menus_path, method: :get, class: "text-blue-500 hover:text-blue-700 font-medium py-2 px-4 rounded-md" %>
    <%= button_to "Destroy this menu", @menu, method: :delete, class: "text-red-500 hover:text-red-700 font-medium py-2 px-4 rounded-md", data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>
</div>
<hr class="my-8">
