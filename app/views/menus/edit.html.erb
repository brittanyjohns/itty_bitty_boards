<h1 class="text-3xl font-bold text-blue-600 mb-6 mt-4 text-center">
  Editing menu
</h1>

<%= render "form", menu: @menu %>
<div class="mt-6 text-center">
  <%= image_tag @doc.image, class: "sm:w-full md:w-1/3 rounded-lg mx-auto" if @doc&.image.attached? %>
</div>

<% if current_user.admin? %>
  <div class="mt-6 text-center">
    <%= @menu.description %>
  </div>
<% end %>
<div class="mt-8 flex justify-center space-x-4">
  <%= button_to "Back", menu_path(@menu), method: :get, class: "text-blue-500 hover:text-blue-700 font-medium py-2 px-4 rounded-md border" %>
  <%= button_to "Destroy menu", @menu, method: :delete, class: "text-red-500 hover:text-red-700 font-medium py-2 px-4 rounded-md border", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this menu? This action cannot be undone." } %>
</div>
