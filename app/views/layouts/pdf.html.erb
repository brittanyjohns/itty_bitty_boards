<!-- app/views/layouts/pdf.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Board PDF</title>
    <style>
      html, body { -webkit-print-color-adjust: exact; print-color-adjust: exact; }
      body { font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif; }

      .page { display: grid; grid-template-rows: auto auto auto; gap: 4mm; }
      .header { display: flex; align-items: center; justify-content: space-between; }
      .header h1 { font-size: 12pt; margin: 0; }
      .meta { font-size: 10pt; color: #555; }
      .lead-title { font-size: 9pt; color: #888; margin: 0 8mm 0 0; font-weight: normal; }

      .board-wrap { break-inside: avoid; border: 1pt solid #ddd; border-radius: 8pt; padding: 4pt; }
      .board-grid { display: grid; grid-gap: 2pt; }

      .tile {
        position: relative; border: 2pt solid #ccc; border-radius: 4pt; background: #fff; overflow: hidden;
        display: grid; grid-template-rows: 1fr auto;
        overflow: hidden;
      }
      .tile img { width: 100%; height: 100%; object-fit: contain; display: block; }

      .label {
        font-size: 10pt; text-align: center; padding: 3pt 4pt; line-height: 1.2;
        background: #f7f7f7; border-top: 1px solid #e5e5e5;
      }

      .footer { display: grid; grid-template-columns: 1fr auto; gap: 8mm; align-items: end; }
      .qr-block { text-align: right; }
      .qr-block img { width: 24mm; height: 24mm; display: inline-block; }
      .qr-caption { font-size: 9pt; color: #444; margin-top: 2mm; }
      .logo img {
        max-width: 35px;
        height: auto;
      }
      .logo {
        width: 35px;
        height: auto;
      }
      .footer-left { 
        font-size: 9pt;
        color: #666;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
      }
      .footer-left a { color: #666; text-decoration: none; }
      .footer-left a:hover { text-decoration: underline; }
      .green {
        background-color: #b7f399
      }
      .yellow {
        background-color: #fdec00
      }
      .red {
        background-color: #ff6464
      }
      .blue {
        background-color: #81d9ff
      }
      .purple {
        background-color: #cb91eb
      }
      .orange {
        background-color: #ffc463
      }
      .black {
        background-color: #000000d9;
        color: white;
      }
      .white {
        background-color: #ffffffd9;
      }
      .gray {
        background-color: #808080d9;
      }
      .pink {
        background-color: #ffc0e4
      }
      .teal {
        background-color: #18ddda;
      }

    </style>
  </head>
  <body>
    <div class="page">
      
      <%= yield %>
    </div>
  </body>
</html>
