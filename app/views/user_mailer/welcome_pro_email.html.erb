    .quickstart ol { margin: 8px 0 0 18px; padding: 0; color: #3f3f3f; }
    .quickstart li { margin: 8px 0; font-size: 15px; line-height: 1.5; }

    .card { border: 1px solid #e9e9e9; border-radius: 12px; padding: 16px; }
    .grid { display: grid; grid-template-columns: 1fr; gap: 12px; } /* kept for preview clients; Gmail-safe table below handles real inboxes */
    .muted { color: #666; font-size: 13px; }

    .footer { margin-top: 28px; font-size: 13px; text-align: center; color: #777; }
    .footer a { color: #7645ef; text-decoration: none; }

    /* Prevent Gmail from recoloring links inside tables */
    .container table[role="presentation"] a { color:#7645ef !important; text-decoration:none !important; }

    @media (min-width: 560px) {
      .grid.two { grid-template-columns: 1fr 1fr; gap: 12px; }
    }
    @media (max-width: 480px) {
      .container { padding: 22px; }
