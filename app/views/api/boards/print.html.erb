<!-- app/views/api/boards/print.html.erb -->
<div class="header">
  <div style="display: flex; align-items: center; gap: 8mm;">
    <div class="logo">
      <% path = Rails.root.join("public/logo_bubble.png") %>
      <% b64 = Base64.strict_encode64(File.binread(path)) %>
      <img alt="SpeakAnyWay Logo" src="data:image/png;base64,<%= b64 %>">
    </div>
    <div class="lead-title"><p style="font-size: 8pt; color: #999;">
      Created with SpeakAnyWay AAC.
      <br>
      <span style="font-size: 6pt; color: #999;"><%= Time.zone.now.strftime("%b %-d, %Y") %></span>
    </p>
  </div>
</div>
  
  <h1><%= @board.try(:name) || "Communication Board" %></h1>
  <div class="meta">Learn more at <a href="https://www.speakanyway.com" target="_blank" rel="noopener">speakanyway.com</a>
  </div>

</div>

<div class="board-wrap">
  <div class="board-grid" style="grid-template-columns: repeat(<%= @columns %>, 1fr);">
    <% @tiles.each do |t| %>
      <% col_start = t["x"].to_i + 1
         row_start = t["y"].to_i + 1
         col_span = t["w"].to_i
         row_span = t["h"].to_i %>

      <div class="tile" style="grid-column:<%= col_start %>/span <%= col_span %>; grid-row:<%= row_start %>/span <%= row_span %>;">
        <% if t["image_url"].present? %>
          <img src="<%= t["image_url"] %>" alt="<%= t["label"] %>">
        <% else %>
          <div style="display:flex;align-items:center;justify-content:center;color:#aaa;font-size:9pt;">(no image)</div>
        <% end %>
        <div class="label"><%= t["label"] %></div>
      </div>
    <% end %>
  </div>
</div>

<div style="display: flex; align-items: center; gap: 8mm; width: 100%; justify-content: space-between;" class="footer">
  <div style="font-size: 9pt; color: #666;">
    Scan the QR to open this board:<br>
    <%= @qr_target_url %>
  </div>    
  <div class="qr-block">
    <img src="<%= @qr_data_url %>" alt="QR code">
  </div>
</div>
