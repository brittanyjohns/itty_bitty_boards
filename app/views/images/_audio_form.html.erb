<%= form_with(url: create_audio_image_path(image), method: :post, class: "space-y-2") do |form| %>
    <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-3">
        <%= form.select :voice, image.missing_voices, class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:max-w-xs" %>
          
        <%= form.submit "GO", class: "w-full sm:w-auto px-4 py-2 font-medium bg-green-300 rounded hover:bg-green-400 focus:ring-2 focus:ring-green-200" %>
    </div>
<% end %>