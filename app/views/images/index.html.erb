
<h1 class="text-4xl font-bold my-3 mx-1"> Image Library</h1>
<%= link_to "New Image", new_image_path, class: "text-blue-600 hover:text-blue-200 px-2 py-1 rounded-md text-sm font-medium border m-1" %>
<%= render "shared_nav" if current_user.admin? %>
<div class="w-full mx-auto overflow-clip">
<%= paginate @images %>
</div>
  <%= render "utils/search", search_path: images_path, show_user_images_only: true %>
<h1 class="text-2xl font-semibold text-gray-700">Showing <%= @images.count %> Images</h1>
<div id="images" class="grid grid-cols-3 md:grid-cols-5 lg:grid-cols-6 gap-2 my-6 pb-10">
  <% @images.each do |image| %>
    <%= render image %>
  <% end %>
</div>
