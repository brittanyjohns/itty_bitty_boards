<%= form_with(url: generate_image_path(image), method: :post, data: { turbo: false, controller: 'generate-image', image_id: image.id }) do |form| %>
        <%= form.text_area :image_prompt, value: image.image_prompt, placeholder: "Enter a prompt for your image", class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline w-full", rows: 3, data: { generate_image_target: "image_prompt" } %>
        <%= form.submit "Generate AI Image", class: "w-full sm:w-auto px-4 py-2 font-medium bg-green-300 rounded hover:bg-green-400 focus:ring-2 focus:ring-green-200 cursor-pointer", data: { action: "click->generate-image#generate" } %>
<% end %>