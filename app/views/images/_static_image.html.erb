<div class="text-center bg-white rounded-lg shadow-md overflow-hidden flex flex-col h-full">
  <div id="<%= dom_id image %>" class="basis-3/4 cursor-pointer hover:bg-green-200" data-controller='static-image' data-static-image-label="<%= image.label&.upcase %>" data-static-image-target="wrapper" data-action="click->static-image#speak">
    <div class="items-center text-center" id="<%= image.label %>">
      <%= display_image_for(image, current_user) %>
    </div>
  </div>
  <div class="relative text-wrap basis-1/4">
    <% if action_name == "fullscreen" %>
      <p class="text-sm font-semibold text-gray-700 py-1 block m-2 mr-3"><%= image.display_label %></p>
      <% else %>
      <%= link_to image.display_label, image, class: "text-sm font-semibold text-gray-700 py-1 block hover:text-blue-600 m-2 mr-3" %>
      <%= remove_image_button(@board, image) if current_user.can_edit?(@board) %>
    <% end %>
    </div>
</div>