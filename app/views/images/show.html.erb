  <h1 class="text-2xl font-semibold">
    <%= @image.label %>
  </h1>
  <div class="bg-gray-100 p-4 rounded-lg w-1/3">
      <%= render "images/doc_form" %>
  </div>
  <%= generate_image_button(@image) %>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">

<% @image.docs.each do |doc| %>
  <%= render doc %>
<% end %>
</div>
<div>
  <%= link_to "Edit this image", edit_image_path(@image) %> |
  <%= link_to "Back to images", images_path %>

  <%= button_to "Destroy this image", @image, method: :delete %>
</div>
