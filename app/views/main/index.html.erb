<main class="container mx-auto px-4">
    <!-- Introduction Section -->
    <section class="text-center py-8">
        <h1 class="text-4xl font-bold text-purple-600">Welcome to <span class="text-2xl">Itty</span><span class="text-3xl">Bitty</span>Boards</h1>
        <p class="text-md text-gray-700 mt-2">
            Empowering communication for kids with speech delays.
        </p>
        <%= link_to demo_path, class: "mt-4 inline-block bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded" do %>
            Learn More
        <% end %>
        <%= link_to welcome_path, class: "mt-4 inline-block bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded" do %>
            Welcome Info
        <% end %>
        <%= link_to faq_path, class: "mt-4 inline-block bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded" do %>
            FAQs
        <% end %>
        <%= link_to new_user_registration_path, class: "mt-4 inline-block bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded" do %>
            Get Started
        <% end %>
    </section>

    <!-- Features Section -->
    <section>
        <div class="grid md:grid-cols-2 gap-4">
            <!-- Feature 1: Custom Communication Boards -->
            <%= link_to demo_path do %>
                <div class="bg-white rounded-lg shadow p-6">
                    <h2 class="font-semibold text-lg text-green-600">Create Custom Boards</h2>
                    <p class="text-sm text-gray-600 mt-2">
                        Upload your images or choose from our library to create personalized communication boards.
                    </p>
                </div>
            <% end %>

            <!-- Feature 2: AI-Generated Images -->
            <%= link_to demo_path do %>
            <div class="bg-white rounded-lg shadow p-6">
                <h2 class="font-semibold text-lg text-orange-500">AI-Generated Images</h2>
                <p class="text-sm text-gray-600 mt-2">
                    Use AI to generate images that perfectly match your needs.
                </p>
            </div>
            <% end %>

            <!-- Feature 3: Menu-to-Board Conversion -->
            <%= link_to demo_path do %>
            <div class="bg-white rounded-lg shadow p-6">
                <h2 class="font-semibold text-lg text-blue-500">Menu-to-Board Conversion</h2>
                <p class="text-sm text-gray-600 mt-2">
                    Snap a picture of a menu, and we’ll transform it into a communicative board for easy ordering.
                </p>
            </div>
            <% end %>

            <!-- Future Features Teaser -->
            <%= link_to demo_path do %>
            <div class="bg-white rounded-lg shadow p-6">
                <h2 class="font-semibold text-lg text-red-500">Exciting Features Coming Soon!</h2>
                <p class="text-sm text-gray-600 mt-2">
                    Stay tuned for more innovative tools to support your child’s communication journey.
                </p>
            </div>
            <% end %>
        </div>
    </section>
    <section class="container mx-auto px-4">
        <h2 class="text-2xl font-bold mt-8">Predefined Boards</h2>
        <p class="text-lg text-gray-600 my-2">
            Choose from our library of predefined boards to get started.
        </p>
        <div class="grid md:grid-cols-6 gap-2">
            <% @predefined_boards.order(name: :asc).each do |board| %>
                <%= render board %>
            <% end %>
        </div>
    </section>
</main>
