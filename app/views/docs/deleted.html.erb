  <div class="mt-6 sm: w-full bg-gray-100">
        <%= render "shared_nav" %>

      <%= render "utils/search", search_path: docs_path, show_user_images_only: true %>
    <%= paginate @docs %>

    <h2 class="text-xl font-semibold text-gray-700">Deleted</h2>
    <table class="min-w-full mt-3">
      <thead class="bg-gray-100">
        <tr>
          <th class="text-left py-3 px-4 uppercase font-semibold text-sm text-gray-600">ID</th>
          <th class="text-left py-3 px-4 uppercase font-semibold text-sm text-gray-600"> Image</th>
          <th class="text-left py-3 px-4 uppercase font-semibold text-sm text-gray-600">Text</th>
          <th class="text-left py-3 px-4 uppercase font-semibold text-sm text-gray-600">Actions</th>
        </tr>
      </thead>
      <tbody class="text-gray-700">
        <% @docs.order(created_at: :desc).each do |doc| %>
          <tr class="border-b border-gray-200 hover:bg-gray-100">
            <td class="text-left py-3 px-4"><%= doc.documentable_type.downcase %>-<%= doc.id %></td>
            <td class="text-left py-3 px-4"><%= image_tag doc.image, class: "h-52 w-52" if doc.image.attached? %></td>
            <td class="text-left py-3 px-4"><%= link_to doc.processed, doc %> </td>
            <td class="text-right py-3 px-4"><%= render "find_or_create", doc: doc, generate_image: false if current_user.can_edit?(doc) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>