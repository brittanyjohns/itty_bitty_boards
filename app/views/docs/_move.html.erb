<%= form_with(url: move_doc_path(doc), method: :post, class: 'text-center') do |form| %>
    <%= form.hidden_field :documentable_type, value: "Image" %>
    <%= form.collection_select :documentable_id, current_user.all_available_images, :id, :label, { include_blank: true }, class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline w-full" %>
    <%= form.submit "Move", class: "w-full sm:w-auto px-4 py-2 font-medium bg-blue-300 rounded hover:bg-blue-400 focus:ring-2 focus:ring-blue-200 cursor-pointer  disabled:opacity-75 disabled:cursor-not-allowed" %>
<% end %>