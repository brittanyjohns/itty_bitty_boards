<p style="color: green"><%= notice %></p>

<h1>Docs</h1>

<div id="docs" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @docs.each do |doc| %>
    <%= render doc %>
    <p>
      <%= link_to "Show this doc", doc %>
    </p>
  <% end %>
</div>

<%= link_to "New doc", new_doc_path %>
