<div id="boards" class="border p-1  w-full">
  <%= paginate @boards %>
  <%= link_to "New board", new_board_path, class: "text-lg md:text-xl font-medium text-gray-700 hover:text-blue-600 transition duration-150 ease-in-out" %>
  <h3 class="text-xl font-bold text-gray-800">My Boards</h3>
  <ul class="list-none p-0">
  <% @boards.order(name: :asc).each do |board| %>
      <%= link_to board do %>
        <li class="p-4 md:p-6 mb-4 flex justify-between items-center bg-white rounded-lg shadow border border-gray-200 transform hover:scale-105 transition duration-150 ease-in-out">
          <span class="text-lg md:text-xl font-medium text-gray-700 hover:text-blue-600 transition duration-150 ease-in-out"><%= board.name %></span>
        </li>
      <% end %>
  <% end %>
  </ul>
</div>
