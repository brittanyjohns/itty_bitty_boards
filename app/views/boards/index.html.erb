<div class="bg-white px-10">
  <h1 class="text-4xl font-bold my-3">
    Boards
  </h1>

  <div class="flex justify-end items-center mb-4">
    <%= link_to "New Board", new_board_path, class: "py-2 px-4 bg-purple-600 text-white rounded-md text-lg hover:bg-purple-700 transition duration-150 ease-in-out" %>
  </div>
  <div class="grid sm:grid-cols-1 md:grid-cols-2 gap-2">
    <div id="boards" class="border p-2 md:p-3 max-h-screen overflow-scroll">
      <h3 class="text-2xl font-bold text-gray-800 mb-4">My Boards ( <%= @boards.count %> )</h3>
      
      <ul class="list-none p-0">
        <% @boards.order(name: :asc).each do |board| %>
            <li class="p-2 md:p-3 mb-4 flex justify-between items-center bg-white rounded-lg shadow border border-gray-200 transform hover:translate-y-1 transition duration-150 ease-in-out">
              <%= link_to board do %>
                <span class="text-lg md:text-xl font-medium text-gray-700 hover:text-blue-600 transition duration-150 ease-in-out"><%= board.name %></span>
              <% end %>
              <div class="relative">
                <div class="badge">
              <%= button_to copy_nav, clone_board_path(board), method: :post, class: "text-blue-600 hover:text-blue-200 px-3 py-2 rounded-md text-sm font-medium" %>
                </div>
                <div class="tooltip absolute opacity-25 bg-blue-600 text-white text-xs rounded p-1">
                    Copy
                </div>
              </div>
              
            </li>
        <% end %>
      </ul>
    </div>
      <div id="predefined_boards" class="border p-2 md:p-3 max-h-screen overflow-scroll">
      <h3 class="text-2xl font-bold text-gray-800 mb-4">Predefined Boards</h3>
      
      <ul class="list-none p-0">
        <% @predefined_boards.order(name: :asc).each do |board| %>
            <li class="p-2 md:p-3 mb-4 flex justify-between items-center bg-white rounded-lg shadow border border-gray-200 transform hover:translate-y-1 transition duration-150 ease-in-out">
              <%= link_to board do %>
                <span class="text-lg md:text-xl font-medium text-gray-700 hover:text-blue-600 transition duration-150 ease-in-out"><%= board.name %></span>
              <% end %>
              <div class="relative">
                <div class="badge">
              <%= button_to copy_nav, clone_board_path(board), method: :post, class: "text-blue-600 hover:text-blue-200 px-3 py-2 rounded-md text-sm font-medium" %>
                </div>
                <div class="tooltip absolute opacity-25 bg-blue-600 text-white text-xs rounded p-1">
                    Copy
                </div>
              </div>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>