<div id="boards" class="border p-4 md:p-6 w-full bg-blue-50">
  <div class="flex justify-between items-center mb-4">
    <%= paginate @boards %>
    <%= link_to "New Board", new_board_path, class: "py-2 px-4 bg-purple-600 text-white rounded-md text-lg hover:bg-purple-700 transition duration-150 ease-in-out" %>
  </div>
  
  <h3 class="text-2xl font-bold text-gray-800 mb-4">My Boards ( <%= current_user.boards.count %> )</h3>
  
  <ul class="list-none p-0">
    <% @boards.order(name: :asc).each do |board| %>
      <%= link_to board do %>
        <li class="p-4 md:p-6 mb-4 flex justify-between items-center bg-white rounded-lg shadow border border-gray-200 transform hover:translate-y-1 transition duration-150 ease-in-out">
          <span class="text-lg md:text-xl font-medium text-gray-700 hover:text-blue-600 transition duration-150 ease-in-out"><%= board.name %></span>
          <span class="text-sm text-gray-500"><%= board.images.count %> images</span>
          <span class="text-xs text-gray-500"><%= board.user_id %></span>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
