<h1 class="text-4xl font-bold my-3">
  Boards
</h1>

<div class="flex justify-end items-center mb-4">
  <%= link_to "New Board", new_board_path, class: "py-2 px-4 bg-purple-600 text-white rounded-md text-lg hover:bg-purple-700 transition duration-150 ease-in-out" %>
</div>
<div class="grid sm:grid-cols-1 md:grid-cols-2 gap-4">
  <div id="predefined_boards" class="border p-4 md:p-6 bg-blue-50">
    <h3 class="text-2xl font-bold text-gray-800 mb-4">Predefined Boards</h3>
    
    <ul class="list-none p-0">
      <% @predefined_boards.order(name: :asc).each do |board| %>
          <li class="p-4 md:p-6 mb-4 flex justify-between items-center bg-white rounded-lg shadow border border-gray-200 transform hover:translate-y-1 transition duration-150 ease-in-out">
            <%= link_to board do %>
              <span class="text-lg md:text-xl font-medium text-gray-700 hover:text-blue-600 transition duration-150 ease-in-out"><%= board.name %></span>
            <% end %>
            <%= button_to "Clone", clone_board_path(board), method: :post, class: "bg-blue-500 hover:bg-blue-700 text-white font-light py-1 px-2 m-1 rounded-full text-sm" %>
          </li>
      <% end %>
    </ul>
  </div>

  <div id="boards" class="border p-4 md:p-6 bg-blue-50 max-h-screen overflow-scroll">
    <h3 class="text-2xl font-bold text-gray-800 mb-4">My Boards ( <%= @boards.count %> )</h3>
    
    <ul class="list-none p-0">
      <% @boards.order(name: :asc).each do |board| %>
          <li class="p-4 md:p-6 mb-4 flex justify-between items-center bg-white rounded-lg shadow border border-gray-200 transform hover:translate-y-1 transition duration-150 ease-in-out">
            <%= link_to board do %>
              <span class="text-lg md:text-xl font-medium text-gray-700 hover:text-blue-600 transition duration-150 ease-in-out"><%= board.name %></span>
            <% end %>
            <%= button_to "Clone", clone_board_path(board), method: :post, class: "bg-blue-500 hover:bg-blue-700 text-white font-light py-1 px-2 m-1 rounded-full text-sm" %>
            <% if current_user.admin? %>
            <span class="text-sm text-gray-500"><%= board.user ? board.user.name || board.user.email : "unassigned" %></span>
            <% end %>
          </li>
      <% end %>
    </ul>
  </div>
</div>
