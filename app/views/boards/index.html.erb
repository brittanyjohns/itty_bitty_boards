<div class="bg-white">
  <h1 class="text-4xl font-bold my-3">
    Boards
  </h1>
  <%= turbo_stream_from(:board_list) %>

  <div class="flex justify-end items-center mb-4">
    <%= link_to "New Board", new_board_path, class: "py-2 px-4 bg-purple-600 text-white rounded-md text-lg hover:bg-purple-700 transition duration-150 ease-in-out" %>
  </div>
  <div class="grid sm:grid-cols-1 md:grid-cols-2 gap-2">
    <div class="border p-2 md:p-3 max-h-screen overflow-scroll">
      <h3 class="text-2xl font-bold text-gray-800 mb-4">My Boards ( <%= @boards.count %> )</h3>
      <% if @boards.empty? %>
      <div class="flex justify-center items-center">
        <p class="text-gray-600">You have no boards yet.</p>
        <%= link_to "Create a new board", new_board_path, class: "text-blue-600 hover:text-blue-200 px-2 py-1 rounded-md text-sm font-medium border m-1" %>
      </div>
      <% end %>

      <ul class="list-none p-0" id="my_boards_<%= current_user.id %>">
        <%= render @boards.order(name: :asc) %>
      </ul>
    </div>
    <div id="predefined_boards" class="border p-2 md:p-3 max-h-screen overflow-scroll">
      <h3 class="text-2xl font-bold text-gray-800 mb-4">Sample Boards</h3>
      
      <ul class="list-none p-0">
        <%= render @predefined_boards.order(name: :asc) %>
      </ul>
    </div>
  </div>
</div>