<div id="my_boards" class="border p-2 md:p-3 max-h-screen overflow-scroll">
  <h3 class="text-2xl font-bold text-gray-800 mb-4">
    My Boards ( <%= boards.count %> )
  </h3>
  <% if boards.empty? %>
  <div class="flex justify-center items-center">
    <p class="text-gray-600">You have no boards yet.</p>
    <%= link_to "Create a new board", new_board_path, class: "text-blue-600
    hover:text-blue-200 px-2 py-1 rounded-md text-sm font-medium border m-1" %>
  </div>
  <% end %>

  <ul class="list-none p-0">
    <% boards.order(created_at: :desc).each do |board| %>
    <li
      class="p-2 md:p-3 mb-4 flex justify-between items-center bg-white rounded-lg shadow border border-gray-200 transform hover:translate-y-1 transition duration-150 ease-in-out"
    >
      <%= link_to board, class: "text-lg md:text-xl font-medium text-gray-700
      hover:text-blue-600 transition duration-150 ease-in-out w-full" do %>
      <span
        class="text-lg md:text-xl font-medium text-gray-700 hover:text-blue-600 transition duration-150 ease-in-out"
        ><%= board.name %></span
      >
      <% end %> <%= button_to copy_nav, clone_board_path(board), method: :post,
      class: "text-blue-600 hover:text-blue-200 px-3 py-2 rounded-md text-sm
      font-medium", data: {tippy_content: "Copy"} %>
    </li>
    <% end %>
  </ul>
</div>
