
<div data-controller="resize" class="m-4 h-[calc(100vh-50px-32px)] w-[calc(100vw-32px)] overflow-hidden grid grid-cols-1" data-resize-target="grid">
  <% @board.images.each do |image| %>
    <div class="relative w-full pb-full shadow hover:cursor-pointer" data-controller="speak" data-speak-label="<%= image.label&.downcase %>" data-action="click->speak#speak">
        <%= image_tag(image.display_image(current_user), class: "absolute object-contain w-full h-full top-0 left-0", data: { resize_target: "image"}) %>
        <span class="absolute bottom-0 left-0 m-1 font-light p-1 text-xs rounded bg-opacity-70 w-1/4 overflow-hidden"><%= image.label %></span>
    </div>
  <% end %>
</div>
