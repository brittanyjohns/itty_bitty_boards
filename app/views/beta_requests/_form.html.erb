
<%= simple_form_for(@beta_request, id: "beta_request_form", html: { class: "flex flex-col md:flex-row space-y-2 md:space-x-2" }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

   <div class="flex justify-center items-center"> 
        <%= f.text_field :email, class: "py-2 px-4 rounded-md border border-gray-300 focus:outline-none focus:border-green-500 focus:bg-whit mr-2", placeholder: "Enter your email", required: true %>
        <%= f.submit "Go", class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-md" %>
    </div>
<% end %>