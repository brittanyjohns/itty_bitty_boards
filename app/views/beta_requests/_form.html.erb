
<%= simple_form_for(@beta_request, id: "beta_request_form", html: { class: "flex flex-col md:flex-row space-y-2 md:space-x-2" }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

   <div class="flex flex-col md:flex-row space-y-2 md:space-x-2">
        <%= f.text_field :email, class: "w-full md:w-3/4 p-3 rounded-lg shadow-sm", placeholder: "Enter your email", required: true %>
        <%= f.submit "Join Beta", class: "w-full grid-cols-2 gap-4 bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-lg" %>
    </div>
<% end %>