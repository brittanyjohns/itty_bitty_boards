
<%= simple_form_for(@team_user, url: invite_team_path(team)) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object&.errors[:base].present? %>

    <div class="mb-4 w-1/2 mx-auto">
    <%= f.label :email, class: "block text-gray-700 font-bold mb-1" %>
    <%= f.input_field :email, class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline w-full", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
