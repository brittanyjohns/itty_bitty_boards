<h1 class="text-4xl font-bold text-blue-600 mb-6">Users</h1>

<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6 mt-6">
  <% @users.each do |user| %>
    <div class="text-center bg-white rounded-lg shadow-md overflow-hidden">
      <div class="items-center text-center">
        <%= link_to user.email, user %>
      </div>
      <p class="text-lg font-bold text-blue-600 mb-3 text-center">
        <%= link_to user.name, user %>
      </p>
    </div>
  <% end %>
</div>

<div class="flex justify-center mt-6">
  <%# Print Image totals %>
  <p class="text-center text-gray-600 text-sm">
    Total Images: <%= Image.count %>
  </p>
  <p class="text-center text-gray-600 text-sm ml-4">
    Total Skipped Images: <%= Image.skipped.count %>
  </p>
</div>
<div class="flex justify-center mt-6">
  <%# Print OpenSymbol totals %>
  <p class="text-center text-gray-600 text-sm">
    Total OpenSymbols: <%= OpenSymbol.count %>
  </p>
  <p class="text-center text-gray-600 text-sm ml-4">
    Total Skipped OpenSymbols: <%= OpenSymbol.count %>
  </p>
</div>
<div class="flex justify-center mt-6">
  <%# Print Doc totals %>
  <p class="text-center text-gray-600 text-sm ml-4">
    Total Docs: <%= Doc.count %>
  </p>
  <p class="text-center text-gray-600 text-sm ml-4">
    Doc Sources: <%= Doc.distinct.pluck(:source_type).join(', ') %>
  </p>
  </div>
<div class="flex justify-center mt-6">
  <p class="text-center text-gray-600 text-sm">
    Total Menu Docs: <%= Doc.menu_docs.count %>
  </p>
  <p class="text-center text-gray-600 text-sm ml-4">
    Total Image Docs: <%= Doc.image_docs.count %>
  </p>
  <p class="text-center text-gray-600 text-sm ml-4">
    Total Docs today: <%= Doc.created_today.count %>
  </p>
</div>