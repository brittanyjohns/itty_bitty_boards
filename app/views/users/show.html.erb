<div class="text-center bg-white rounded-lg shadow-md h-full pt-3">
    <h1 class="text-4xl font-bold text-blue-600 mb-6">User #<%= @user.id %></h1>
    <div class="items-center text-center">
        <%= @user.email %>
    </div>
    <p class="text-lg font-bold text-blue-600 mb-3 text-center">
        <%= @user.name || "unknown" %> - Admin: <%= @user.admin? ? "Yes" : "No" %>
    </p>
    <% if current_user.id == @user.id %>
        <%= render 'profile', user: @user %>
    <% end %>
</div>